<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <!--Базовый стиль для задания темы на стандартных компонентах - Button, ScrollViewer, CheckBox, TextBox, RadioButton,
    ListBox, PasswordBox, RepeatButton, Tooltip, StatusBar, GridSplitter, Separator -->
    <Style x:Key="MsControlStyle">
        <Setter Property="telerik:StyleManager.Theme" Value="Vista"/>
    </Style>    
</ResourceDictionary>